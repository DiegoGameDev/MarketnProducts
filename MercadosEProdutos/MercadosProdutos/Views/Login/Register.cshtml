@using Model
@model RegisterModel

@{
    Layout = "LayoutOff.cshtml";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card shadow p-4" style="width: 100%; max-width: 500px;">

        <h2 class="text-center mb-3">Criar Conta</h2>

        <p class="text-center text-muted">
            Já possui conta?
            <a asp-controller="Login" asp-action="Index">Fazer login</a>
        </p>

        @if (TempData["ErroMSG"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErroMSG"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-controller="Login" asp-action="RegisterAccount" method="post">

            <div class="mb-3">
                <label asp-for="name" class="form-label">Nome</label>
                <input asp-for="name" class="form-control" placeholder="Seu nome completo" />
                <span class="text-danger">@Html.ValidationMessageFor(x => x.name)</span>
            </div>

            <div class="mb-3">
                <label asp-for="email" class="form-label">Email</label>
                <input asp-for="email" type="email" class="form-control" placeholder="name@example.com" />
                <span class="text-danger">@Html.ValidationMessageFor(x => x.email)</span>
            </div>

            <div class="mb-3">
                <label asp-for="phone" class="form-label">Telefone (opcional)</label>
                <input asp-for="phone" class="form-control" placeholder="(xx) xxxxx-xxxx" />
            </div>

            <div class="mb-3">
                <label asp-for="password" class="form-label">Senha</label>
                <input asp-for="password" type="password" class="form-control" />
                <span class="text-danger">@Html.ValidationMessageFor(x => x.password)</span>
                <div class="form-text">
                    A senha deve conter letras e números e ter pelo menos 8 caracteres.
                </div>
            </div>

            <button type="submit" class="btn btn-success w-100 mt-2">
                Criar Conta
            </button>

        </form>

    </div>
</div>
