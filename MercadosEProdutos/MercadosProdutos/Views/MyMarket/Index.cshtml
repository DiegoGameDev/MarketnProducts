@using DBModel
@model IEnumerable<Market>

@{
    ViewData["Title"] = "Minhas Lojas";
}

<div class="container mt-5">

    <h2 class="text-center mb-4">Minhas Lojas</h2>

    <!-- üîπ Card de cria√ß√£o -->
    <div class="mb-4">
        <div class="card border-dashed text-center p-4">

            <h5 class="mb-2">Criar nova loja</h5>

            <p class="text-muted">
                Cadastre um novo mercado e aguarde a aprova√ß√£o.
            </p>

            <a asp-controller="MyMarket"
               asp-action="Create"
               class="btn btn-dark mt-2">
                + Nova Loja
            </a>

        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Voc√™ ainda n√£o est√° associado a nenhuma loja.
        </div>
    }
    else
    {
        <div class="row">

            @foreach (var market in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100">

                        <img src="/Resources/markets/@(market.ID.ToString()+".png")"
                             class="card-img-top"
                             style="height: 180px; object-fit: cover;" />

                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title">@market.marketName</h5>

                            <span class="text-muted mb-2">
                                üìç @market.marketLocal
                            </span>

                            <p class="card-text">
                                @(market.description?.Length > 80
                                    ? market.description.Substring(0, 80) + "..."
                                    : market.description)
                            </p>

                            <div class="mt-auto d-flex gap-2">
                                <a asp-controller="MyMarket"
                                   asp-action="Edit"
                                   asp-route-id="@market.ID"
                                   class="btn btn-primary w-50">
                                    Gerenciar
                                </a>

                                <a asp-controller="MarketPlace"
                                   asp-action="MarketView"
                                   asp-route-id="@market.ID"
                                   class="btn btn-outline-primary w-50">
                                    Ver Loja
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }

        </div>
    }

</div>